{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": ["error", {
            "tabWidth": 2,
            "semi": false,
            "printWidth": 80,
            "singleQuote": true,
            "trailingComma": "es5"
        }],
        "indent": "off",
        "semi": ["error", "never"],
        "space-before-function-paren": ["error", "never"],
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "always-multiline",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }]
    }
}
